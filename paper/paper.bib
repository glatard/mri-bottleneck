  keywords = {Brain extraction; Deep learning; Image synthesis; MRI-contrast
              agnosticism; Skull stripping;mri-bottleneck},
  language = {en},
  issn     = {1053-8119, 1095-9572},
  pmid     = {35842095},
  doi      = {10.1016/j.neuroimage.2022.119474},
  pmc      = {PMC9465771}
}

